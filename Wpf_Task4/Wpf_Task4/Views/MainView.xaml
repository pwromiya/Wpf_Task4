<!-- Main application window with tabbed interface -->
<Window x:Class="Wpf_Task4.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:Wpf_Task4.Models"
        xmlns:converters="clr-namespace:Wpf_Task4.Converters"
        xmlns:views="clr-namespace:Wpf_Task4.Views.UserControls"
        Title="{DynamicResource MainWindow}"
        Height="750"
        Width="800">

    <Window.Resources>
        <!-- Register converters for use in XAML -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <TabControl Margin="10">
        <!-- Projects management tab -->
        <TabItem Header="{DynamicResource Projects}">
            <views:ProjectsView />
            <!-- Projects user control -->
        </TabItem>

        <!-- User profile tab -->
        <TabItem Header="{DynamicResource Profile}">
            <StackPanel Margin="20" Width="300">
                <TextBlock Text="{DynamicResource Profile}" 
                           FontWeight="Bold" 
                           FontSize="16" 
                           Margin="0,0,0,10"/>

                <!-- Current login display (read-only) -->
                <TextBlock Text="{DynamicResource Login}" FontWeight="SemiBold"/>
                <TextBox Text="{Binding CurrentUser.Login}" 
                         IsReadOnly="True" 
                         Margin="0,0,0,10"/>

                <!-- New password input -->
                <TextBlock Text="{DynamicResource NewPassw}" FontWeight="SemiBold"/>
                <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10"/>

                <!-- Save profile button -->
                <Button Content="{DynamicResource Save}" 
                        Width="150" 
                        Command="{Binding SaveUserProfileCommand}"
                        CommandParameter="{Binding ElementName=NewPasswordBox}"/>

                <!-- Logout button -->
                <Button Content="{DynamicResource LogOut}" 
                        Width="150" 
                        Margin="0,10,0,0"
                        Command="{Binding LogoutCommand}"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>