<!-- Registration window view -->
<Window x:Class="Wpf_Task4.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Register}" 
        Height="400" 
        Width="400">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <!-- Language selection buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="RU" 
                    Command="{Binding Source={StaticResource LangVM}, Path=SetLangRuCommand}"
                    Width="50" Margin="2"/>
            <Button Content="EN" 
                    Command="{Binding Source={StaticResource LangVM}, Path=SetLangEnCommand}"
                    Width="50" Margin="2"/>
            <Button Content="BE" 
                    Command="{Binding Source={StaticResource LangVM}, Path=SetLangBeCommand}"
                    Width="50" Margin="2"/>
        </StackPanel>

        <!-- Login input field -->
        <TextBlock Text="{DynamicResource Login}"/>
        <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

        <!-- Password input field -->
        <TextBlock Text="{DynamicResource Password}"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

        <!-- Registration button (code-behind handler) -->
        <Button Content="{DynamicResource Register}"
                Margin="0,10"
                Width="150" HorizontalAlignment="Center"
                Click="RegisterButton_Click"/>

        <!-- Navigation to login screen -->
        <Button Content="{DynamicResource InvitationToLogIn}"
                Margin="0,10"
                Command="{Binding OpenLoginCommand}" />
    </StackPanel>
</Window>